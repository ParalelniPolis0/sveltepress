{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "typeRoots": ["types"],
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist"],
  "include": ["src/**/*", "types.d.ts"]
}